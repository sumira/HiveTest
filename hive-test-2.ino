// MQTT client setup
WiFiClientSecure espClient;
PubSubClient client(espClient);

// Onboard LED pin
const int onboardLED = 2;

void setup_wifi() {
  delay(10);
  Serial.println("\nConnecting to WiFi...");
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("WiFi connected");
}

void reconnect() {
  while (!client.connected()) {
    Serial.print("Attempting MQTT connection...");
    if (client.connect("ESP8266Client", mqtt_user, mqtt_password)) {
      Serial.println("connected");
      client.subscribe("test/integer");  // Subscribe to "test/integer"
    } else {
      Serial.print("failed, rc=");
      Serial.print(client.state());
      delay(5000);
    }
  }
}

void callback(char* topic, byte* payload, unsigned int length) {
  Serial.print("Message arrived [");
  Serial.print(topic);
  Serial.print("] ");
  
  String message;
  for (int i = 0; i < length; i++) {
    message += (char)payload[i];
  }
  Serial.println(message);

  // Check if the topic is "test/integer" and control LED based on message
  if (String(topic) == "test/integer") {
    int value = message.toInt();
    if (value == 1) {
      digitalWrite(onboardLED, LOW);  // Turn LED on (active LOW)
      Serial.println("LED turned ON");
    } else {
      digitalWrite(onboardLED, HIGH); // Turn LED off
      Serial.println("LED turned OFF");
    }
  }
}

void setup() {
  Serial.begin(115200);
  setup_wifi();

  // Initialize onboard LED
  pinMode(onboardLED, OUTPUT);
  digitalWrite(onboardLED, HIGH);  // Ensure LED is off initially

  #ifdef ESP8266
    espClient.setInsecure();
  #else
    espClient.setCACert(root_ca);  // Use root certificate for secure connection on ESP32
  #endif

  client.setServer(mqtt_server, mqtt_port);
  client.setCallback(callback);
}

void loop() {
  if (!client.connected()) {
    reconnect();
  }
  client.loop();

  // Publish test message periodically
  if (millis() - currentTime > 3000) {
    currentTime = millis();
    client.publish("test/topic", "Hello from ESP8266!");
  }
}
